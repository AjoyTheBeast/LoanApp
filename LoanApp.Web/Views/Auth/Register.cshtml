@model RegistrationRequest

<form method="post">
    <br />
    <div class="container border p-4 shadow-lg rounded" style="max-width: 700px; margin: auto;">
        <h1 class="text-black text-center mb-4">New Customer? Register</h1>
        <div class="row">
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">Email</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">Name</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">PhoneNumber</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">Password</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success btn-lg" value="submit">Sign Up</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}