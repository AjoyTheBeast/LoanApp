@model LoginRequest

<form method="post">
    <br />
    <div class="container border p-4 shadow-lg rounded" style="max-width: 700px; margin: auto;">
        <h1 class="text-black text-center mb-4">Log In</h1>
        <div class="row">
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">Username</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label class="control-label pt-2" style="font-size:18px;">Password</label>
            </div>
            <div class="col-md-9 pb-3">
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success btn-lg">Sign In</button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}